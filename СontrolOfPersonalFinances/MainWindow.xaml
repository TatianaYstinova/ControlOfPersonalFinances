<Window x:Class="СontrolOfPersonalFinances.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СontrolOfPersonalFinances"
        mc:Ignorable="d"
        Title="MainPage" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="447*"/>
            <ColumnDefinition Width="431*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="237*"/>
            <RowDefinition Height="247*"/>

        </Grid.RowDefinitions>
        <Label x:Name="NumberLabel" Content="Номер счета" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="136" FontWeight="Bold" Height="26"/>
        <Label x:Name="BankLabel" Content="Банк :" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="106" FontWeight="Bold" Height="26"/>
        <Label x:Name="BalansLabel" Content="Баланс" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.156,-1.095" FontWeight="Bold" Height="26" Width="51"/>
        <Label x:Name="СurrencyLabel" Content="Валюта" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Height="26" Width="54"/>
        <TextBox x:Name="NumberLabelText" HorizontalAlignment="Left" Margin="122,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Height="18"/>
        <TextBox x:Name="BankLabelText" HorizontalAlignment="Left" Margin="122,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Height="18"/>
        <TextBox x:Name="BalansLabelText" HorizontalAlignment="Left" Margin="122,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Height="18"/>
        <TextBox x:Name="СurrencyLabelText" HorizontalAlignment="Left" Margin="122,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Height="18"/>
        <Button x:Name="OkButton" Content="Добавить" HorizontalAlignment="Left" Margin="137,0,0,0" VerticalAlignment="Center" Height="115" Width="92" Click="OkButton_Click" Grid.Row="1"/>
        <ListBox x:Name="ListBoxOne" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="331,19,100,27" Grid.ColumnSpan="2"/>
        <RadioButton x:Name="DebetCart" Content="Дебютовая карта" HorizontalAlignment="Left" Margin="7,109,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.701,6.372" Grid.Row="1" Height="15" Width="114"/>
        <RadioButton x:Name="Cash" Content="Наличные" HorizontalAlignment="Left" Margin="7,89,0,0" VerticalAlignment="Top" Grid.Row="1" Checked="Cretdit_Checked" Height="15" Width="75"/>
        <RadioButton x:Name="Account" Content="Кредитная карта" HorizontalAlignment="Left" Margin="6,69,0,0" VerticalAlignment="Top" Grid.Row="1" Height="15" Width="110" />
        <Label x:Name="NumberOfPayments" Content="Процентная ставка" HorizontalAlignment="Left" Margin="306,239,0,0" Grid.Row="1" VerticalAlignment="Top" Width="150" Grid.ColumnSpan="2" Height="26"/>
        <TextBox x:Name="InterestRateLabelText" HorizontalAlignment="Left" Margin="281,150,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Height="18"/>
        <Label x:Name="Term" HorizontalAlignment="Left" Margin="348,0,0,0" Grid.Row="1" VerticalAlignment="Center" Content="Срок" Height="26" Width="37"/>
        <TextBox x:Name="TermLabelText" HorizontalAlignment="Left" Margin="291,197,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Height="18"/>
        <Button x:Name="ShowAccountsButton" Content="Отчет по счетам" HorizontalAlignment="Left" Margin="367,73,0,0" Grid.Row="1" VerticalAlignment="Top" Height="23" Width="60" Click="ShowAccountsButton_Click"/>
        <ListBox x:Name="ShowAccountsList" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,148,0,2"/>
        <Label x:Name="AccountLabel" Content="CЧЕТ :" HorizontalAlignment="Left" Margin="20,38,0,0" VerticalAlignment="Top" Width="71" FontWeight="Bold" Grid.Row="1" Height="26"/>
        <RadioButton x:Name="Debt" Content="Долг" HorizontalAlignment="Left" Margin="7,133,0,0" Grid.Row="1" VerticalAlignment="Top" Height="15" Width="45"/>
        <Label x:Name="Id" Content="ID" HorizontalAlignment="Left" Margin="10,137,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.032,-0.403" Width="81" FontWeight="Bold"/>
        <Label x:Name="Comment" Content="Комментарий:" HorizontalAlignment="Left" Margin="13,163,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.232,-0.149" Width="96" FontWeight="Bold"/>
        <TextBox x:Name="IdBox" HorizontalAlignment="Left" Margin="122,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
        <TextBox x:Name="CommentsBox" HorizontalAlignment="Left" Margin="122,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>

    </Grid>
</Window>
